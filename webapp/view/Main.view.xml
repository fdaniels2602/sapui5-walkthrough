<mvc:View
	controllerName="za.co.fuad.controller.Main"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	core:require="{
		formatter: 'za/co/fuad/model/formatter'
	}">

	<Page
		title="{i18n>appTitle}"
		id="page">
		<content>
			<Button
				text="{i18n>showHelloButtonText}"
				press=".sayHello"/>
			<Input
				value="{/recipient/name}"
				description="Hello {/recipient/name}"
				valueLiveUpdate="true"
				width="60%" />
		</content>
	</Page>

</mvc:View>
